{
	"manifest_version": 2,

	"name": "Chat Spark",
	"description": "Your AI Networking Assistant",
	"version": "1.0",
	"author": "@chatspark",

	"background": {
		"scripts": ["popup.js", "messages.js", "settings.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
		"storage"
    ],
	"browser_action": {
		"default_icon": "insignia.png",
		"default_popup": "popup.html"
	}
}